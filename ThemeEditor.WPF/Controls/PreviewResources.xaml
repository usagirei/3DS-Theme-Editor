                    <RectangleGeometry
                        RadiusX="2"
                        RadiusY="2"
                        Rect="0,-24,24,24" />
                    <RectangleGeometry
                        RadiusX="2"
                        RadiusY="2"
                        Rect="0,0,24,24" />
                    <RectangleGeometry
                        RadiusX="8"
                        RadiusY="8"
                        Rect="-24,0,24,24" />
                </GeometryGroup>
            </CombinedGeometry.Geometry1>
            <CombinedGeometry.Geometry2>
                <GeometryGroup FillRule="Nonzero">
                    <RectangleGeometry Rect="-8,-24,16,48" />
                    <RectangleGeometry Rect="-24,-8,48,16" />
                </GeometryGroup>
            </CombinedGeometry.Geometry2>
        </CombinedGeometry>
        <RectangleGeometry
